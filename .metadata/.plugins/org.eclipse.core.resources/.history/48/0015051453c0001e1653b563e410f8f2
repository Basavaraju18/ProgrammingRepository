package cpm.pattern;


// i = Rows
// j = Columns
public class EmptyTriangle {

	private static void demo1() {

		for (int i = 1; i <= 5; i++) {

			for (int j = 1; j <= 5; j++) {
				System.out.print(i);
			}
			System.out.println();
		}

	}
	
	private static void demo2() {

		for (int i = 1; i <= 5; i++) {

			for (int j = 1; j <= 5; j++) {
				System.out.print(j);
			}
			System.out.println();
		}

	}

	private static void demo3() {

		for (int i = 0; i < 5; i++) {

			for (int j = 0; j < 5; j++) {

				if(i == 0 || i==4 || j==0 || j == 4 ) {
					System.out.print("*");
				}
				else {
					System.out.print(" ");
				}

			}
			System.out.println();
		}
	}
	
	private static void leftAngleTriangle() {

		for (int i = 1; i < 6; i++) {
			
			for (int j = 1; j <= i; j++) {
				System.out.print("* ");
			}
			System.out.println(" ");
		}


	}
	
	private static void rightAngletriangle() {

		
		int n = 8;
		
		for (int i = 1; i <= n; i++) {
			
			for (int k = 1; k <= n-i; k++) {
				System.out.print(" ");
			}
			
			for (int j = 1; j <= i; j++) {
				System.out.print("*");
			}
			
			System.out.println();
		}
	}

	public static void main(String[] args) {

//		demo1();
//		System.out.println("=======");
//		demo2();
//		demo3();
		leftAngleTriangle();
		System.out.println("=======");
		rightAngletriangle();

	} 


}
